@model UserClaimsViewModel
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Manage User Claims</h2>
                    <h3>for User Id: @Model.UserId</h3>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Claims.Count; i++)
                    {
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                            <label class="col-md-2" asp-for="Claims[i].Value">@Model.Claims[i].ClaimType</label>
                            <select asp-for="Claims[i].Value" asp-items="@Model.Claims[i].Options">
                                <option value="@Guid.Empty">Select Please</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Claims[i].Value"></span>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">

                    <input type="hidden" asp-for="@Model.UserId" />
                    <input type="submit" value="Update" class="btn btn-primary w-100" style="width: auto" />
                    <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary w-100"
                       style="width: auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>